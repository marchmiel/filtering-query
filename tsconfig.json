{
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "es5",                           
    "module": "commonjs",
    "strict": true,   
    "declaration": true,
    "typeRoots": ["types"],
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,      
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
